@model imgstack.Models.StackCreateViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="formpage">
    <h1>Create stack</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "val-msg" })
        <table class="tbl-form stack">
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "label" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "val-msg" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Public, htmlAttributes: new { @class = "label" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Public, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.Public, "", new { @class = "val-msg" })
                </td>
            </tr>
        </table>
        <div class="button-holder">
            <input type="submit" value="Create me!" class="btn btn-default" />
        </div>
    }
</main>

